@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="hero-section">
    <h1>Musical Analytics</h1>
    <p>Discover insights about your listening habits, find new music, and explore detailed artist information with our advanced Spotify analytics platform.</p>
    <a href="/Auth/Login" class="spotify-btn btn btn-lg">Get Started</a>
</div>

<div class="spotify-container">
    <div class="feature-grid">
        <div class="feature-card">
            <div class="feature-icon">
                <i class="bi bi-graph-up"></i>
            </div>
            <h3>Listening Metrics</h3>
            <p>View detailed analytics about your listening habits, most played tracks, favorite genres, and discover patterns in your music preferences.</p>
            <a href="#" class="btn spotify-btn">Learn More</a>
        </div>
        
        <div class="feature-card">
            <div class="feature-icon">
                <i class="bi bi-search"></i>
            </div>
            <h3>Advanced Search</h3>
            <p>Find music by specific parameters like BPM, key, genre combinations, and mood. Discover new music tailored to your exact preferences.</p>
            <a href="/Search" class="btn spotify-btn">Try Search</a>
        </div>
        
        <div class="feature-card">
            <div class="feature-icon">
                <i class="bi bi-people"></i>
            </div>
            <h3>Artist Insights</h3>
            <p>Explore comprehensive profiles of your favorite artists, including discographies, related artists, and deep analytics about their musical style.</p>
            <a href="#" class="btn spotify-btn">Explore Artists</a>
        </div>
    </div>
    
    <div class="stats-display mt-5">
        <div class="row text-center">
            <div class="col-md-4">
                <h2 class="display-4 fw-bold">50M+</h2>
                <p class="text-muted">Tracks Analyzed</p>
            </div>
            <div class="col-md-4">
                <h2 class="display-4 fw-bold">200K+</h2>
                <p class="text-muted">Users</p>
            </div>
            <div class="col-md-4">
                <h2 class="display-4 fw-bold">3.5M+</h2>
                <p class="text-muted">Artist Profiles</p>
            </div>
        </div>
    </div>
</div>
