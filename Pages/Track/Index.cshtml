@page "{id}"
@model SpotifyProject.Pages.Track.IndexModel
@{
    ViewData["Title"] = Model.Track?.Name ?? "Track";
}

@if (Model.Track == null)
{
    <p class="text-muted">Track not found.</p>
}
else
{
    <div class="entity-header card mb-4 p-3 d-flex gap-3 align-items-center">
        <div class="entity-image" style="width:140px;">
            @if (!string.IsNullOrEmpty(Model.Track.Album?.Images?.FirstOrDefault()?.Url))
            {
                <a href="/Album/@Model.Track.Album.Id"><img src="@Model.Track.Album.Images.OrderByDescending(i => i.Width).First().Url" alt="@Model.Track.Album.Name" class="img-fluid rounded" /></a>
            }
        </div>
        <div class="flex-fill">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h1 class="h4 mb-1">@Model.Track.Name</h1>
                    <div class="text-muted small">
                        @foreach (var a in Model.Track.Artists)
                        {
                            if (!string.IsNullOrEmpty(a.Id))
                            {
                                <a href="/Artists/Details/@a.Id">@a.Name</a>@(a != Model.Track.Artists.Last() ? ", " : "")
                            }
                            else
                            {
                                <span>@a.Name</span>@(a != Model.Track.Artists.Last() ? ", " : "")
                            }
                        }
                    </div>
                    <div class="text-muted small">Album: <a href="/Album/@Model.Track.Album?.Id">@Model.Track.Album?.Name</a></div>
                </div>
                <div class="text-end">
                    @if (Model.Track.Explicit)
                    {
                        <span class="badge bg-warning text-dark me-2">Explicit</span>
                    }
                    <span class="text-muted small">@TimeSpan.FromMilliseconds(Model.Track.DurationMs).ToString(@"m\:ss")</span>
                    @if (!string.IsNullOrEmpty(Model.Track.Id))
                    {
                        <div class="mt-2">
                            <a class="btn btn-sm btn-success spotify-btn" target="_blank" rel="noopener" href="https://open.spotify.com/track/@Model.Track.Id">Open in Spotify</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- additional details / analysis could be added below -->
}