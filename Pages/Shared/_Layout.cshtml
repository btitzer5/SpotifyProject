@using SpotifyProject
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor Http

@{
    var isAuthed = !string.IsNullOrEmpty(Http.HttpContext?.Session.GetString(Constants.SessionTokensKey));
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Music Analytics</title>
    <script type="importmap"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SpotifyProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm spotify-navbar">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <i class="bi bi-music-note-beamed me-2"></i>
                    Music Analytics
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Page"].ToString() == "/Index" ? "active" : "")" asp-area="" asp-page="/Index">
                                <i class="bi bi-house me-1"></i> Home
                            </a>
                        </li>
                        @if (!isAuthed)
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Page"].ToString().Contains("/Auth/Login") ? "active" : "")" asp-area="" asp-page="/Auth/Login">
                                    <i class="bi bi-spotify me-1"></i> Login with Spotify
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Page"].ToString().Contains("/Playlists") ? "active" : "")" asp-area="" asp-page="/Playlists">
                                    <i class="bi bi-music-note-list me-1"></i> Playlists
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Page"].ToString().Contains("/Browse") ? "active" : "")" asp-area="" asp-page="/Browse">
                                    <i class="bi bi-collection me-1"></i> Browse
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["Page"].ToString().Contains("/Profile") ? "active" : "")" asp-area="" asp-page="/Profile/Index">
                                    <i class="bi bi-person me-1"></i> My Profile
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Page"].ToString().Contains("/Search") ? "active" : "")" asp-area="" asp-page="/Search" asp-route-q="Beatles">
                                <i class="bi bi-search me-1"></i> Search
                            </a>
                        </li>
                    </ul>
                    @if (isAuthed)
                    {
                        <div class="d-flex align-items-center">
                            <span class="navbar-text me-3">
                                <i class="bi bi-check-circle-fill text-success me-1"></i> Connected
                            </span>
                            <a class="spotify-btn btn" asp-area="" asp-page="/Auth/Logout">Logout</a>
                        </div>
                    }
                    else
                    {
                        <a class="spotify-btn btn" asp-area="" asp-page="/Auth/Login">Connect with Spotify</a>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="spotify-footer mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">&copy; 2025 - Music Analytics</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <a asp-area="" asp-page="/Privacy" class="text-decoration-none" style="color: var(--spotify-gray-text);">Privacy</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
