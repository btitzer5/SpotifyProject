@page "{id}"
@model SpotifyProject.Pages.Playlist.IndexModel
@{
    ViewData["Title"] = Model.Playlist?.Name ?? "Playlist";
}

@if (Model.Playlist == null)
{
    <p class="text-muted">Playlist not found.</p>
}
else
{
    <div class="entity-header card mb-4 p-3 d-flex gap-3 align-items-center">
        <div style="width:140px;">
            @if (Model.Playlist.Images?.Any() == true)
            {
                <a href="/Playlist/@Model.Playlist.Id"><img src="@Model.Playlist.Images.First().Url" alt="@Model.Playlist.Name" class="img-fluid rounded" /></a>
            }
        </div>
        <div class="flex-fill">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <h1 class="h4 mb-1">@Model.Playlist.Name</h1>
                    <div class="text-muted small">By @Model.Playlist.Owner?.DisplayName</div>
                    @if (!string.IsNullOrWhiteSpace(Model.Playlist.Description))
                    {
                        <div class="text-muted small mt-1">@Model.Playlist.Description</div>
                    }
                </div>
                <div class="text-end">
                    @if (!string.IsNullOrEmpty(Model.Playlist.Id))
                    {
                        <a class="btn btn-sm btn-success spotify-btn" target="_blank" rel="noopener" href="https://open.spotify.com/playlist/@Model.Playlist.Id">Open in Spotify</a>
                    }
                </div>
            </div>
        </div>
    </div>

    <section>
        <h4 class="h5">Tracks</h4>
        <ol class="list-group list-group-numbered">
            @foreach (var t in Model.Tracks)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <a href="/Track/@t.Id" class="fw-medium">@t.Name</a>
                        <div class="text-muted small">@string.Join(", ", t.Artists.Select(a => a.Name))</div>
                    </div>
                    <div class="text-muted small">@TimeSpan.FromMilliseconds(t.DurationMs).ToString(@"m\:ss")</div>
                </li>
            }
        </ol>
    </section>
}