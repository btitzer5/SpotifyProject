@page
@model SpotifyProject.Pages.CategoriesModel
@{
    ViewData["Title"] = "Categories";
}

<h2>Browse Categories</h2>

<div asp-validation-summary="All" class="text-danger mb-3"></div>

@if (!Model.AllCategories.Any())
{
    <p class="text-muted">No Categories Available</p>
}
else
{
    <form method="post" asp-page="/Categories" class="mb-4">
        <p class="text-muted small">Select up to 5 categories.</p>
        <div class="row row-cols-md-3 g-2">
            @foreach (var category in Model.AllCategories)
            {
                var isChecked = Model.Selected?.Contains(category.Id, StringComparer.OrdinalIgnoreCase) == true ? "checked" : null;
                <div class="col">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="Selected" value="@category.Id" id="category_@category.Id" @isChecked />
                        <label class="form-check-label" for="category_@category.Id">@category.Name</label>
                    </div>
                </div>
            }
        </div>
        <button type="submit" class="btn btn-primary mt-3">Show Playlists</button>
    </form>

    @if (Model.PlaylistsByCategory.Any())
    {
        <h4>Category Playlists</h4>
        @foreach (var categoryId in Model.Selected)
        {
            var categoryName = Model.AllCategories.FirstOrDefault(c => c.Id.Equals(categoryId, StringComparison.OrdinalIgnoreCase))?.Name ?? categoryId;
            var playlists = Model.PlaylistsByCategory.TryGetValue(categoryId, out var pls) ? pls : new List<SpotifyAPI.Web.FullPlaylist>();

            <h5 class="mt-3">@categoryName</h5>
            @if (playlists.Any())
            {
                <ul class="list-group">
                    @foreach (var pl in playlists)
                    {
                        <li class="list-group-item d-flex justify-content-between">
                            <span>@pl.Name</span>
                            @if (!string.IsNullOrWhiteSpace(pl.Uri))
                            {
                                <a class="link-secondary" href="https://open.spotify.com/playlist/@pl.Id" target="_blank" rel="noopener">Open</a>
                            }
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="text-muted">No playlists found.</p>
            }
        }
    }
}
