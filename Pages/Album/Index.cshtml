@page "{id}"
@model SpotifyProject.Pages.Album.IndexModel
@{
    ViewData["Title"] = Model.Album?.Name ?? "Album";
}

@if (Model.Album == null)
{
    <p class="text-muted">Album not found.</p>
}
else
{
    <div class="entity-header card mb-4 p-3 d-flex gap-3">
        <div class="entity-image">
            @if (!string.IsNullOrEmpty(Model.Album.Images?.FirstOrDefault()?.Url))
            {
                <img src="@Model.Album.Images.OrderByDescending(i => i.Width).First().Url" alt="@Model.Album.Name" class="img-fluid rounded" style="max-height:160px" />
            }
        </div>
        <div class="flex-fill">
            <div class="d-flex align-items-start justify-content-between">
                <div>
                    <h1 class="h4 mb-1">@Model.Album.Name</h1>
                    <div class="text-muted small">@string.Join(", ", Model.Album.Artists.Select(a => a.Name))</div>
                    <div class="text-muted small">Released: @Model.Album.ReleaseDate • @Model.Album.TotalTracks tracks</div>
                </div>
                <div class="text-end">
                    @if (!string.IsNullOrEmpty(Model.Album.Id))
                    {
                        <a class="spotify-btn btn btn-success btn-sm" target="_blank" rel="noopener" href="https://open.spotify.com/album/@Model.Album.Id">Open in Spotify</a>
                    }
                </div>
            </div>
        </div>
    </div>

    <section>
        <h4 class="h5">Tracks</h4>
        <ol class="list-group list-group-flush">
            @foreach (var t in Model.Tracks)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <a href="/Track/@t.Id" class="fw-medium">@t.Name</a>
                        <div class="text-muted small">@string.Join(", ", t.Artists.Select(a => a.Name))</div>
                    </div>
                    <div class="text-muted small">@TimeSpan.FromMilliseconds(t.DurationMs).ToString(@"m\:ss")</div>
                </li>
            }
        </ol>
    </section>
}